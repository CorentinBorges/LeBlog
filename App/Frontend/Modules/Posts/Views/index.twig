{% extends 'App/Frontend/Templates/layout.twig'%}

{% block jumbotron %}   

  <header class="masthead" style="background-image: url('Web/img/news.jpg')"> 
      <div class="overlay"></div>
          <div class="container">
              <div class="row">
                  <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Les Posts</h1>
                      
                    </div>
                </div>
            </div>
        </div>
  </header>

{% endblock %}

  {% block content %}
  <!-- Main Content -->
<div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        {% for post in list %}
          <div class="post-preview">
            <a href={{"post" ~ post.id }}>
              <h2 class="post-title">
               {{ post.title }}
              </h2>
              <h3 class="post-subtitle">
                {{ post.chapo }}
              </h3>
            </a>
            <p class="post-meta">Posted by
              {{ post.author }}</a>
              on {{ post.dateCreation}}</p>
          </div>
          <hr>
      {% endfor %}
      </div>
    </div>
  </div>  
  

{% endblock %}